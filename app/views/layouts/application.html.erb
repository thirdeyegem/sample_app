<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<%= csrf_meta_tag %>
	<%= render 'layouts/stylesheets' %>
	
	<!--> The 'javascript_include_tag' is required for inclusion of standard javascript libraries which provide UI functionality for Rails (e.g. alert('');)</-->
	<%= javascript_include_tag "application" %>
	
</head>
	<body>
		<div class="container">
			<%= render 'layouts/header' %>
			<section class="round">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>">
						<%= value %>
					</div>
				<% end %>
				
				<%= yield %>
			</section>
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
